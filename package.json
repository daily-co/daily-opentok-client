{
  "name": "daily-opentok-client",
  "version": "0.0.4",
  "license": "BSD-2",
  "description": "Daily Tokbox shim",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/opentok.umd.js",
  "module": "./dist/opentok.es.js",
  "exports": {
    ".": {
      "import": "./dist/opentok.es.js",
      "require": "./dist/opentok.umd.js"
    }
  },
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "start": "vite",
    "clean": "rm -rf dist/",
    "build": "vite build && tsc",
    "build:watch": "vite build --watch",
    "serve": "vite preview",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npm run lint && npm run test:js",
    "test:js": "jest",
    "lint": "npm run lint:ts && npm run lint:js",
    "lint:js": "eslint . --cache --cache-location node_modules/.eslintcache && prettier --check .",
    "lint:ts": "tsc"
  },
  "dependencies": {
    "@daily-co/daily-js": "^0.31.0",
    "@opentok/client": "^2.23.0",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/jest": "^29.0.2",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "fake-mediastreamtrack": "^1.1.6",
    "jest-environment-jsdom": "^29.0.3",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vite": "^2.4.4",
    "vite-plugin-mkcert": "^1.9.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead"
  ],
  "engines": {
    "node": "16.x"
  },
  "repository": {
    "url": "https://github.com/daily-co/opentok"
  }
}
